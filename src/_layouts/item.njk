---
layout: default
---

<div class="stack" typeof="schema:MusicAlbum">
  <h1 property="schema:name">{{ title or site.name }}</h1>

  <div class="cluster">
    {% if thumbnailUrl %}
      <div property="schema:image">
        {% image thumbnailUrl %}
      </div>
    {% endif %}

    <div class="meta">
      <dl>
        {% if creators %}
          <dt>Artists</dt>
          {% for artist in creators %}
            <dd property="schema:byArtist" typeof="schema:Role">
              <span property="schema:name">{{ artist.name }}</span>
              (<em property="schema:roleName">{{ artist.role }}</em>)
            </dd>
          {% endfor %}
        {% endif %}

        {% if publisher %}
          <dt>Publisher</dt>
          <dd property="schema:publisher">{{ publisher }}</dd>
        {% endif %}

        {% if datePublished %}
          <dt>Released</dt>
          <dd property="schema:datePublished">{{ datePublished }}</dd>
        {% endif %}
      </dl>
    </div>
  </div>

  <div property="schema:description">
    {{ content | safe }}
  </div>

  {% if tags | length %}
    <h2>Tags</h2>
    <ul>
      {% for tag in tags %}
        <li property="schema:keywords">{{ tag }}</li>
      {% endfor %}
    </ul>
  {% endif %}

  {% if audio | length %}
    <ul role="list">
      {% for audioUrl in audio %}
        <li property="schema:audio">
          {% embed audioUrl %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
